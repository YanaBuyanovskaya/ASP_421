@{
    ViewData["Title"] = "Cart";
}
<h2 class="mb-3">Cart</h2>

<div id="cart-container" class="card p-3 shadow-sm">
    <div id="cart-msg" class="mb-2"></div>
    <div id="cart-empty" class="alert alert-info d-none">Ваш кошик пустий!</div>

    <table id="cart-table" class="table d-none">
        <thead>
            <tr>
                <th>Товар</th>
                <th class="text-end">Ціна</th>
                <th class="text-center">Кількість</th>
                <th class="text-end">Всього</th>
            </tr>
        </thead>

        <tbody></tbody>

        <tfoot>
            <tr>
                <th colspan="3" class="text-end">Загалом: </th>
                <th class="text-end" id="grand-total">₴ 0.00</th>
            </tr>
        </tfoot>
    </table>
</div>