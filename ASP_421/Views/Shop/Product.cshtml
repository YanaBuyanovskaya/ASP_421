@model ProductDetailsVM


@{
    ViewData["Title"] = Model?.Product?.Name ?? "Product";
    // safe image url
    var imgUrl = (Model?.Product?.ImageUrl ?? "").Trim();
    if (string.IsNullOrWhiteSpace(imgUrl))
        imgUrl = "/img/placeholder.png";
    else if (!imgUrl.StartsWith("/"))
        imgUrl = "/Storage/Item/" + imgUrl;
}

@if (Model?.Product == null)
{
    <div class="alert alert-danger" role="alert">
        Запитаного товару не існує або він був видалений
    </div>
}
else
{
    <h1 class="mb-3">@Model.Product.Name</h1>

    <div class="row g-4">
        <div class="col-12 col-md-5">
            <img src="@imgUrl" alt="@Model.Product.Name" class="w-100 rounded-3 shadow-sm" />
        </div>

        <div class="col-12 col-md-6">
            <h2 class="h4">@Model.Product.Name</h2>
            <p class="text-muted">@Model.Product.Description</p>
            <h4 class="mb-3">@Model.Product.Price.ToString("F2")</h4>
                
            <div id="product-in-cart">
                @if(!Model.inCart)
                {
                    <button class="btn btn-success"
                    data-add-to-cart="@Model.Product.Id">
                        Додати до кошику
                    </button>
                }
                else
                {
                    <button type="button"
                            class="btn btn-success btn-add-to-cart"
                            data-product-id="@Model.Product.Id">
                        До кошику
                    </button>
                }
            </div>
         
        </div>

        <div class="col-12 col-md-1">
            <small class="text-muted">Тут може бути Ваша реклама</small>
        </div>
    </div>

    <hr class="my-4" />

    @if (Model.AlsoLike?.Any() == true)
    {
        <h2 class="h5 mb-3">Вас також може зацікавити</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-6 g-3">
            @foreach (var p in Model.AlsoLike)
            {
                var cardImg = (p.ImageUrl ?? "").Trim();
                if (string.IsNullOrWhiteSpace(cardImg))
                    cardImg = "/img/placeholder.png";
                else if (!cardImg.StartsWith("/"))
                    cardImg = "/Storage/Item/" + cardImg;

                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="@cardImg" class="card-img-top" alt="@p.Name" />
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title text-truncate mb-2">@p.Name</h6>
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <span class="fw-semibold">@p.Price.ToString("F2")</span>
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-secondary"
                                       asp-controller="Shop" asp-action="Prod" asp-route-id="@p.Id">
                                        View
                                    </a>
                                    <button type="button"
                                            class="btn btn-sm btn-primary btn-add-to-cart"
                                            data-product-id="@p.Id">
                                        Add
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
}
